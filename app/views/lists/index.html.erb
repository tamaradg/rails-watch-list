<div class="body">
  <div class="cover mb-4 d-flex align-items-center justify-content-center">
    <div class="text-center">
      <h1>Movies</h1>
      <h3 class=""></h3>
    </div>
  </div>
  <div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h3 class="mb-0">Lists</h3>
      <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-flat' %>
    </div>
    <div class="row justify-content-around">
      <% @lists.each do |list| %>
        <div class="co-12 col-lg-3 col-md-4 ">
          <%= link_to list_path(list), class:'text-decoration-none' do %>
            <div class="card-category"%>
              <div class="list-name"><%= list.name %></div>
              <% if list.photo.attached? %>
                <%= cl_image_tag list.photo.key, width: 200, height: 200%>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
